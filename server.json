{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.codefuturist/email-mcp",
  "description": "IMAP/SMTP email MCP server â€” 47 tools, IMAP IDLE push, multi-account, AI triage.",
  "repository": {
    "url": "https://github.com/codefuturist/email-mcp.git",
    "source": "github"
  },
  "version": "0.2.0",
  "packages": [
    {
      "registryType": "npm",
      "identifier": "@codefuturist/email-mcp",
      "version": "0.2.0",
      "runtimeHint": "npx",
      "commandArguments": ["stdio"],
      "transport": {
        "type": "stdio"
      }
    },
    {
      "registryType": "docker",
      "identifier": "codefuturist/email-mcp",
      "version": "0.2.0",
      "commandArguments": [
        "run",
        "--rm",
        "-i",
        "-v",
        "~/.config/email-mcp:/home/node/.config/email-mcp:ro",
        "ghcr.io/codefuturist/email-mcp"
      ],
      "transport": {
        "type": "stdio"
      }
    }
  ]
}
