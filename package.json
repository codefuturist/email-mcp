{
  "name": "@codefuturist/email-mcp",
  "version": "0.1.1",
  "mcpName": "io.github.codefuturist/email-mcp",
  "description": "Email MCP server with IMAP + SMTP support",
  "type": "module",
  "bin": {
    "email-mcp": "./dist/main.js"
  },
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/main.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "biome format --write src/",
    "format:check": "biome check src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check": "biome check src/ && eslint src/",
    "commit": "cog commit",
    "changelog": "cog changelog",
    "version:check": "cog check",
    "version:bump": "cog bump --auto",
    "version:bump:minor": "cog bump --minor",
    "version:bump:patch": "cog bump --patch",
    "version:log": "cog log",
    "prepublishOnly": "tsc -p tsconfig.build.json"
  },
  "keywords": [
    "email",
    "mcp",
    "imap",
    "smtp",
    "model-context-protocol",
    "mcp-server",
    "claude",
    "anthropic",
    "ai-tools",
    "llm",
    "nodejs"
  ],
  "author": {
    "name": "codefuturist",
    "url": "https://github.com/codefuturist"
  },
  "license": "LGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codefuturist/email-mcp.git"
  },
  "homepage": "https://github.com/codefuturist/email-mcp#readme",
  "bugs": {
    "url": "https://github.com/codefuturist/email-mcp/issues"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.1",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "imapflow": "^1.2.9",
    "node-ical": "^0.25.2",
    "nodemailer": "^8.0.1",
    "smol-toml": "^1.6.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.0",
    "@eslint/compat": "^2.0.2",
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.2.3",
    "@types/nodemailer": "^7.0.10",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-airbnb-extended": "^3.0.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
